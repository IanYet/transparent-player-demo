{
	"compilerOptions": {
		"types": ["@types/node"],

		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	}
}
